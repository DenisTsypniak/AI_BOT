DISCORD_TOKEN=put_your_discord_bot_token_here
DISCORD_COMMAND_PREFIX=!

OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT_SECONDS=90
OLLAMA_TEMPERATURE=0.5
OLLAMA_NUM_CTX=8192

SQLITE_PATH=./data/memory.db
MAX_HISTORY_MESSAGES=20
MAX_RESPONSE_CHARS=4000

BOT_MENTION_ONLY=true
AUTO_REPLY_CHANNEL_IDS=

DEFAULT_SYSTEM_PROMPT=You are a helpful Discord AI assistant. Keep context, answer clearly, and adapt to user style.

VOICE_AUTO_SPEAK_DEFAULT=true
TTS_VOICE=en-US-AriaNeural
TTS_RATE=+0%
MAX_TTS_CHARS=500
